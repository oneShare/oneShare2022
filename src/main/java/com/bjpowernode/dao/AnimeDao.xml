<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjpowernode.dao.AnimeDao">

    <select id="selectAll" resultType="com.bjpowernode.entity.Anime">
        select * from anime
    </select>

    <select id="selectName" resultType="java.util.Map">
        select
            a.name as aname,
            t.name as tname
        from
            anime a
        join
            team t
        on
            a.animeId = t.animeId
    </select>

    <select id="selectByName" resultType="com.bjpowernode.vo.AnimeVo">
        select
            a.name as aname,
            t.name as tname
        from
            anime a
        join
            team t
        on
            a.animeId = t.animeId
    </select>

</mapper>